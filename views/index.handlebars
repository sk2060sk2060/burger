<header class="text-center">
  <h1 class="mb-4">Eat-Da-Burger!</h1>
</header>

<div class="row mt-2">
  <div class="col-md-12">
    <form class="addburger text-center">
      <div class="form-group">
      <input type="text" name="burger" id="burrgerr" size="40">
      </div>
    	<button  type="submit" class="btn btn-success mb-2">Submit</button>
      <p class="mb-4">Enter a burger you want to eat and click the "Submit" button</p>
    </form>      
  </div>
</div>

<div class="row">  
  <div class="col-md-6">
    <h3 class="mt-2 ml-4">Ordered Burgers</h4>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <div class="row mt-2">
            <div class="col-md-8">
              {{this.id}}. {{this.burger_name}}
            </div>
            <div class="col-md-4">
              <button data-burgerid="{{this.id}}" class="devour-burger">Devour it!</button>
            </div>
          </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col-md-6">
    <h3 class="mt-2 ml-2">Ready to Eat</h4>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <div class="row mt-2">
              {{this.id}}. {{this.burger_name}}
            </div>
          {{/if}}
        {{/each}}
      </ul>
  </div>
</div>
